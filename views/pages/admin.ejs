<% include ../includes/header %>
    <div class="container">
    	<div class="row">
			<table class="table table-hover table-bordered">
				<thead>
					<tr>
						<th>电影名字</th>
						<th>导演</th>
						<th>国家</th>
						<th>上映年份</th>
						<th>录入时间</th>
						<th>查看</th>
						<th>更新</th>
						<th>删除</th>
					</tr>
				</thead>

				<tbody>
					<% for (item of movies) { %>
						<tr class="item-id-<%= item._id %>">
							<td><%= item.title %></td>
							<td><%= item.doctor %></td>
							<td><%= item.country %></td>
							<td><%= item.year %></td>
							<td><% moment(item.meta.createdAt).format('MM/DD/YYY') %></td>
							<td><a href="../movie/<%= item._id %>" target="_blank">查看</a></td>
							<td><a href="../movie/update/<%= item._id %>" target="_blank">修改</a></td>
							<td>
								<button class="btn btn-danger del" type="button" data-id="<%= item._id %>">删除</button></td>
						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
    </div>
<% include ../includes/footer %>