<% include ../includes/header %>
  <div class="container">
    <div class="row">
      <table class="table table-hover">
        <thead>
          <th>用户名</th>
          <th>录入时间</th>
          <th>查看</th>
          <th>更新</th>
          <th>删除</th>
        </thead> 
        <tbody>
          <% for (item of categories) { %>
            <tr class="item-id-<%= item._id %>">
              <td><%= item.name %></td> 
              <td><%= moment(item.meta.updateAt).format('MM/DD/YYYY') %></td> 
              <td><a target="_blank" href="../movie/<%= item._id %>">查看</a></td>
              <td><a target="_blank" href="../admin/update/<%= item._id %>">修改</a></td>
              <td>
                <button class="btn btn-danger btn-sm del" type="button" data-id="<%= item._id %>">删除</button>
              </td> 
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
<% include ../includes/footer %> 