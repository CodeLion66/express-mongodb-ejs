<% include ../includes/header %>
    <div class="container">
    	<div class="row justify-content-center">
			<div class="col-5">
				<form action="/user/signin" method="post">
					<div class="modal-body">

						<div class="form-group">
							<div class="row justify-content-center">
								<div class="col-4">
									<label for="signupName">用户名</label>
								</div>
								<input id="signupName" type="text" class="form-contol col-8" name="user[name]">
							</div>
						</div>
						
						<div class="form-group">
							<div class="row justify-content-center">
								<div class="col-4">
									<label for="signupPassword">密码</label>
								</div>
								<input id="signupPassword" type="text" class="form-contol col-8" name="user[password]">
							</div>
						</div>
						<div class="row justify-content-center">
							<div class="col-8">
								<button class="btn btn-success btn-block" type="submit">登 录</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
    </div>

