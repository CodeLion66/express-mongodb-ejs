<% include ../includes/header %>
    <div class="container">
    	<div class="row">
			<% for(item of movies) { %>
				<div class="col-md-3">
					<div class="thumbnail">
						<a href="/movie/<%= item._id %>">
							<img class="poster" src="<%= item.poster %>" alt="title">
						</a>
						<div class="caption">
							<h3><%= item.title %></h3>
							<p>
								<a class="btn btn-primary" href="/movie/<%= item._id %>" role="button">观看预告片</a>
							</p>
						</div>
					</div>
				</div>
				
			<% } %>
		</div>
    </div>
<% include ../includes/footer %>